<Window x:Class="MarkdownKnowledgeBase.NoteSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="选择目标文档" Width="420" MinHeight="320" SizeToContent="Height"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="请选择跳转目标文档" Margin="0,0,0,8"/>
        <ListBox x:Name="NoteList" Grid.Row="1" DisplayMemberPath="DisplayName" MinHeight="200"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Width="80" Margin="0,0,8,0" Click="OnOkClicked">确定</Button>
            <Button Width="80" Click="OnCancelClicked">取消</Button>
        </StackPanel>
    </Grid>
</Window>
