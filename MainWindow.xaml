<Window x:Class="MarkdownKnowledgeBase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarkdownKnowledgeBase"
        mc:Ignorable="d"
        Title="Markdown Knowledge Base" Height="720" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0" Background="#F7F7F7" LastChildFill="True">
            <StackPanel DockPanel.Dock="Top" Margin="12">
                <TextBlock Text="分类" FontWeight="Bold" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Button Width="110" Margin="0,0,8,0" Click="OnAddCategory">新增分类</Button>
                    <Button Width="110" Click="OnRefreshCategories">刷新</Button>
                </StackPanel>
                <ListBox x:Name="CategoryList" Height="180" SelectionChanged="OnCategorySelectionChanged"/>
            </StackPanel>

            <StackPanel Margin="12">
                <TextBlock Text="笔记" FontWeight="Bold" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Button Width="90" Margin="0,0,8,0" Click="OnAddNote">新增</Button>
                    <Button Width="90" Margin="0,0,8,0" Click="OnImportNote">导入</Button>
                    <Button Width="90" Margin="0,0,8,0" Click="OnDeleteNote">删除</Button>
                    <Button Width="90" Click="OnSaveNote">保存</Button>
                </StackPanel>
                <ListBox x:Name="NoteList" DisplayMemberPath="Name" SelectionChanged="OnNoteSelectionChanged"/>
            </StackPanel>
        </DockPanel>

        <Grid Grid.Column="1" Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="220"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <Button Width="140" Margin="0,0,8,0" Click="OnAddSourceMarker">添加源标记</Button>
                <Button Width="140" Margin="0,0,8,0" Click="OnAddTargetMarker">添加目标标记</Button>
                <Button Width="120" Margin="0,0,8,0" Click="OnCreateLink">建立跳转</Button>
                <Button Width="100" Margin="0,0,8,0" Click="OnJump">跳转</Button>
                <Button Width="100" Click="OnBack">返回</Button>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" BorderBrush="#DDDDDD" BorderThickness="1" Margin="0,0,6,0">
                    <TextBox x:Name="EditorBox" AcceptsReturn="True" AcceptsTab="True" TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                             TextChanged="OnEditorTextChanged"/>
                </Border>
                <Border Grid.Column="1" BorderBrush="#DDDDDD" BorderThickness="1" Margin="6,0,0,0">
                    <WebBrowser x:Name="PreviewBrowser"/>
                </Border>
            </Grid>

            <Grid Grid.Row="2" Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="源标记" FontWeight="Bold" Margin="0,0,0,6"/>
                    <ListBox x:Name="SourceMarkerList"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="12,0">
                    <TextBlock Text="目标标记" FontWeight="Bold" Margin="0,0,0,6"/>
                    <ListBox x:Name="TargetMarkerList"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="跳转" FontWeight="Bold" Margin="0,0,0,6"/>
                    <ListBox x:Name="LinkList"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
